<div class="flex flex-row flex-wrap overflow-x-auto sm:flex-nowrap justify-between
            @horizontalGap space-x-0 lg:space-y-0 lg:@verticalGap">

    <div class="flex flex-col w-full min-w-min">

        @LeftSidebarContent

    </div>

    <div class="flex flex-col flex-grow">

        @MainContent

    </div>
</div>

@code {
    [Parameter]
    public RenderFragment LeftSidebarContent { get; set; }

    [Parameter]
    public RenderFragment MainContent { get; set; }

    [Parameter]
    public int HorizontalGap { get; set; }

    [Parameter]
    public int VerticalGap { get; set; }

    private string horizontalGap => $"space-x-{HorizontalGap}";
    private string verticalGap => $"space-x-{VerticalGap}";
}